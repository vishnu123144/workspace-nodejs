<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
  </head>
  <body>
    <script type="text/javascript">
      let updateEmployee = () =>{
        let id = "<%= employee.id %>";
        let firstName = $("#firstName").val();
        let lastName = $("#lastName").val();
        let city = $("#city").val();
        let phone = $("#phone").val();
        let age = $("#age").val();
        let dob = $("#dob").val();
        $.ajax({ //$.ajax with POST 
          url : "/api/employee", //end point
          type: "PUT", 
          data : {id,firstName,lastName,city,phone,age,dob},
          success: function(data, textStatus, jqXHR) {
            if(data.result == "ok"){
              location = "/employee";
            }
          },
          error: function (jqXHR, textStatus, errorThrown){
            alert("Unable to connect remote server..");
          }
      });
      }
    </script>
    <h1><%= title %></h1>
    <form>
      <input id="firstName" type="" name="" placeholder="firstName" value="<%= employee.firstName %>"><br/><br/>
      <input id="lastName" type="" name="" placeholder="lastName" value="<%= employee.lastName %>"><br/><br/>
      <input id="city" type="" name="" placeholder="city" value="<%= employee.city %>"><br/><br/>
      <input id="phone" type="" name="" placeholder="Phone" value="<%= employee.phone %>"><br/><br/>
      <input id="age" type="" name="" placeholder="age" value="<%= employee.age %>"><br/><br/>
      <input id="dob" type="date" name="" placeholder="dob" value="<%= employee.dob %>"><br/><br/>
      <input type="button" value="update" name="" onclick="updateEmployee()"><br/><br/>
    </form>
  </body>
</html>
